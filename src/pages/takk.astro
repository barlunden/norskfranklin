---
import { CustomProvider } from "rsuite";
import Layout from "../layouts/Layout.astro";

const seoData = {
  title: "Takk for innsending – Norsk Franklinregister",
  description: "Takk for ditt bidrag til Norsk Franklinregister. Vi setter stor pris på at du deler bilder og kunnskap om Franklin-biler med oss.",
  keywords: ["takk", "Franklin bidrag", "bildeinnllevering", "Franklin kunnskap"],
  image: "https://norskfranklinregister.no/images/FranklinLogo.png",
  type: "website" as const
};
---

<Layout {...seoData}>
  <CustomProvider>
    <main class="container bg-white p-8 rounded-lg shadow-effect text-center max-w-2xl mx-auto my-12">
      <div class="mb-6">
        <svg class="w-20 h-20 mx-auto text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      
      <h1 class="text-3xl font-bold mb-4 text-gray-800">
        Takk for innsending!
      </h1>
      
      <p class="text-gray-700 mb-4 text-lg">
        Vi har mottatt meldingen din og/eller bildet. Vi setter stor pris på
        at du bidrar til Norsk Franklinregister.
      </p>
      
      <p class="text-gray-600 mb-6">
        Vi vil svare deg så snart som mogleg, vanlegvis innan 2-3 dagar.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/"
          class="inline-block bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition font-medium"
        >
          Tilbake til forsiden
        </a>
        <a
          href="/history"
          class="inline-block bg-slate-100 text-gray-800 px-6 py-3 rounded hover:bg-slate-200 transition font-medium"
        >
          Les meir om Franklin
        </a>
      </div>
    </main>
  </CustomProvider>
</Layout>
