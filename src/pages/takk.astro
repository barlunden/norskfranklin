---
import { CustomProvider } from "rsuite";
import Layout from "../layouts/Layout.astro";

const seoData = {
  title: "Takk for innsending – Norsk Franklinregister",
  description: "Takk for ditt bidrag til Norsk Franklinregister. Vi setter stor pris på at du deler bilder og kunnskap om Franklin-biler med oss.",
  keywords: ["takk", "Franklin bidrag", "bildeinnllevering", "Franklin kunnskap"],
  image: "https://norskfranklinregister.no/images/FranklinLogo.png",
  type: "website" as const
};
---

<Layout {...seoData}>
  <CustomProvider>
        <main class="container bg-white p-8 rounded-lg shadow-effect text-center">
          <h1 class="text-3xl font-bold mb-4 text-gray-800">
            Takk for innsending!
          </h1>
          <p class="text-gray-700 mb-6">
            Vi har mottatt meldingen din og/eller bildet. Vi setter stor pris på
            at du bidrar til Norsk Franklinregister.
          </p>
          <a
            href="/"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition"
          >
            Tilbake til forsiden
          </a>
        </main>
  </CustomProvider>
</Layout>
