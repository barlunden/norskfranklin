---
import { CustomProvider } from "rsuite";
import Layout from "../layouts/Layout.astro";

// Ingen spesiell backend-logikk nødvendig for denne enkle statiske siden
---

<Layout>
  <CustomProvider>
        <main class="container bg-white p-8 rounded-lg shadow-effect text-center">
          <h1 class="text-3xl font-bold mb-4 text-gray-800">
            Takk for innsending!
          </h1>
          <p class="text-gray-700 mb-6">
            Vi har mottatt meldingen din og/eller bildet. Vi setter stor pris på
            at du bidrar til Norsk Franklinregister.
          </p>
          <a
            href="/"
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 transition"
          >
            Tilbake til forsiden
          </a>
        </main>
  </CustomProvider>
</Layout>
