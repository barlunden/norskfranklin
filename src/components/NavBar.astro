---
import { getImage } from 'astro:assets';
import logo from '../images/FranklinLogo.png';

const optimizedLogo = await getImage({ src: logo });
const { pathname } = Astro.url;
---

<header class="navbar-header">
  <nav class="navbar">
    <div class="navbar-inner">
      <a href="/" class="logo-link">
        <img
          src={optimizedLogo.src}
          alt="H. H. Franklin Cars Logo"
          class="logo-img"
        />
      </a>
      <ul class="nav-list">
        <li>
          <a
            href="/"
            class={pathname === "/" ? "nav-link active" : "nav-link"}
            aria-current={pathname === "/" ? "page" : undefined}
          >
            Hjem
          </a>
        </li>
        <li>
          <a
            href="/history"
            class={pathname === "/history" ? "nav-link active" : "nav-link"}
            aria-current={pathname === "/history" ? "page" : undefined}
          >
            Historikk
          </a>
        </li>
        <li>
          <a
            href="/franklininnorway"
            class={pathname === "/franklininnorway" ? "nav-link active" : "nav-link"}
            aria-current={pathname === "/franklininnorway" ? "page" : undefined}
          >
            Biler i Norge
          </a>
        </li>
        <li>
          <a
            href="/klubber"
            class={pathname === "/klubber" ? "nav-link active" : "nav-link"}
            aria-current={pathname === "/klubber" ? "page" : undefined}
          >
            Andre sider
          </a>
        </li>
        <li>
          <a
            href="/kontakt"
            class={pathname === "/kontakt" ? "nav-link active" : "nav-link"}
            aria-current={pathname === "/kontakt" ? "page" : undefined}
          >
            Kontakt
          </a>
        </li>
      </ul>
    </div>
  </nav>
</header>

<style>
.navbar-header {
  width: 100%;
}
.navbar {
  width: 100%;
  background: transparent;
  color: #0f172a;
  padding: 2rem 2.5rem;
  z-index: 50;
}
.navbar-inner {
  max-width: 80rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.logo-link {
  margin-bottom: 1rem;
}
.logo-img {
  max-height: 10rem;
  display: block;
}
.nav-list {
  display: flex;
  gap: 2rem;
  font-size: 1.25rem;
  font-weight: 600;
  align-items: center;
  list-style: none;
  padding: 0;
  margin: 0;
}
.nav-link {
  color: #0f172a;
  text-decoration: none;
  padding-bottom: 0.15em;
  transition: color 0.2s;
  border-bottom: 2px solid transparent;
}
.nav-link:hover {
  border-bottom: 2px solid #94a3b8; /* lys bl책gr책 p책 hover */
}
.nav-link.active,
.nav-link[aria-current="page"] {
  border-bottom: 2px solid #2563eb; /* bl책 underline for aktiv */
  color: #2563eb;
}
@media (min-width: 768px) {
  .navbar-inner {
    flex-direction: row;
  }
  .logo-link {
    margin-bottom: 0;
  }
}
</style>
