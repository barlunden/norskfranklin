---
import { getImage } from 'astro:assets';
import { ClientRouter } from 'astro:transitions';
import logo from '../../public/images/FranklinLogo.png';

const optimizedLogo = await getImage({ src: logo });
const { pathname } = Astro.url;

// Definerer lenkene ein stad for å halde det ryddig
const navItems = [
  { path: "/", label: "Hjem" },
  { path: "/history", label: "Historikk" },
  { path: "/franklininnorway", label: "Biler i Norge" },
  { path: "/klubber", label: "Andre sider" },
  { path: "/kontakt", label: "Kontakt" },
];
---

<header class="navbar-header">
  <nav class="navbar">
    <div class="navbar-inner">
      <a href="/" class="logo-link">
        <img
          src={optimizedLogo.src}
          alt="H. H. Franklin Cars Logo"
          class="logo-img"
        />
      </a>

      <ul class="nav-list" id="nav-list">
        {navItems.map((item) => {
          const isActive = pathname === item.path || (item.path !== "/" && pathname.startsWith(item.path));
          return (
            <li>
              <a
                href={item.path}
                class={isActive ? "nav-link active" : "nav-link"}
                aria-current={isActive ? "page" : undefined}
              >
                {item.label}
                {isActive && (
                  <span 
                    transition:name="nav-underline" 
                    class="nav-indicator"
                  />
                )}
              </a>
            </li>
          );
        })}
      </ul>

      <div class="dropdown-menu" id="dropdown-menu">
        <div class="dropdown-toggle" tabindex="0" role="button" aria-haspopup="true" aria-expanded="false">
          Meny
          <span class="dropdown-arrow"></span>
        </div>
        <ul class="dropdown-list">
          {navItems.map((item) => (
            <li>
              <a 
                href={item.path} 
                class={pathname === item.path ? "nav-link active" : "nav-link"}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </nav>
</header>

<style>
.navbar-header {
  width: 100%;
}
.navbar {
  width: 100%;
  background: transparent;
  color: #0f172a;
  padding: 2rem 2.5rem;
  z-index: 50;
}
.navbar-inner {
  max-width: 80rem;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.logo-link {
  margin-bottom: 1rem;
}
.logo-img {
  max-height: 10rem;
  display: block;
}
.nav-list {
  display: flex;
  gap: 2rem;
  font-size: 1.25rem;
  font-weight: 600;
  align-items: center;
  list-style: none;
  padding: 0;
  margin: 0;
}

/* Link-styling og indikator-logikk */
.nav-link {
  color: #0f172a;
  text-decoration: none;
  padding-bottom: 0.15em;
  transition: color 0.2s;
  position: relative; /* Viktig for absolutt posisjonering av streken */
}

.nav-indicator {
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #2563eb;
  display: block;
}

.nav-link:hover {
  color: #2563eb;
}

/* Subtil hover-strek for ikkje-aktive lenker */
.nav-link:not(.active):hover::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 100%;
  height: 2px;
  background-color: #94a3b8;
}

.nav-link.active {
  color: #2563eb;
}

/* Dropdown styling */
.dropdown-menu {
  display: none;
  position: relative;
}
.dropdown-toggle {
  display: flex;
  align-items: center;
  gap: 0.5em;
  background: none;
  color: #0f172a;
  font-size: 1.25rem;
  font-weight: 600;
  border: none;
  cursor: pointer;
  margin-bottom: 0.5em;
  outline: none;
}
.dropdown-arrow {
  display: inline-block;
  width: 1em;
  height: 1em;
  transition: transform 0.3s cubic-bezier(0.4,0,0.2,1);
}
.dropdown-arrow::after {
  content: '';
  display: block;
  width: 0.6em;
  height: 0.6em;
  border-right: 2.5px solid #0f172a;
  border-bottom: 2.5px solid #0f172a;
  transform: rotate(45deg);
  margin: 0 auto;
}
.dropdown-menu.open .dropdown-arrow {
  transform: rotate(180deg);
}
.dropdown-list {
  display: none;
  position: absolute;
  left: 50%;
  top: 100%;
  transform: translateX(-50%);
  background: #fff;
  box-shadow: 0 4px 24px 0 rgba(0,0,0,0.12);
  border-radius: 8px;
  min-width: 200px;
  z-index: 100;
  padding: 1rem 1.5rem;
  margin: 0;
  list-style: none;
}
.dropdown-menu.open .dropdown-list {
  display: block;
}

@media (min-width: 966px) {
  .navbar-inner { flex-direction: row; }
  .logo-link { margin-bottom: 0; }
}
@media (max-width: 675px) {
  .nav-list { display: none; }
  .dropdown-menu { display: block; }
}
</style>

<script is:inline>
  /**
   * Vi brukar 'astro:page-load' slik at scriptet køyrer kvar gong 
   * View Transitions har lasta ei ny side.
   */
  document.addEventListener('astro:page-load', () => {
    const menu = document.getElementById('dropdown-menu');
    if (!menu) return;

    const btn = menu.querySelector('.dropdown-toggle');
    const toggle = (e) => {
      e.stopPropagation();
      const isOpen = menu.classList.toggle('open');
      btn.setAttribute('aria-expanded', isOpen);
    };

    btn.addEventListener('click', toggle);
    
    document.addEventListener('click', (e) => {
      if (!menu.contains(e.target)) {
        menu.classList.remove('open');
        btn.setAttribute('aria-expanded', 'false');
      }
    });
  });
</script>