  }

  p {
    font-size: 1.2rem;
  }

  .card-link {
    font-size: 1rem;
  }

  .shadow-effect {
    border-radius: 32px;
    background: linear-gradient(145deg, #dfe1e3, #ffffff);
    box-shadow:
      16px 16px 32px #9c9e9f,
      -16px -16px 32px #ffffff;
  }

  .image-shadow {
    border-radius: 16px;
    border: 1px solid #9c9e9f;
